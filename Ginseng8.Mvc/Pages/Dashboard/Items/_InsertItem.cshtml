@model InsertItemView

<div class="mb-3">    
    <div id="insert-item-area-@Model.Context">
        <form method="post" asp-controller="WorkItem" asp-action="Create">
            @Model.WriteContextFields(Html)
            <div class="form-row mb-2">
                <div class="col-10">
                    <input type="text" name="Title" required="required" placeholder="add new item" class="form-control form-control-sm" maxlength="255" />
                </div>

                <div class="col-2">
                    <button class="btn btn-sm btn-dark add-work-item" type="submit">Add</button>
                    <button class="btn btn-sm btn-light btn-item-detail" type="button" data-target="item-detail-@Model.Context">Add Detail</button>
                </div>
            </div>
            <div class="form-row">
                <div class="col-12" style="display:none" id="item-detail-@Model.Context">
                    <textarea name="HtmlBody" class="htmlEditor"></textarea>
                </div>
            </div>
        </form>
    </div>
</div>
