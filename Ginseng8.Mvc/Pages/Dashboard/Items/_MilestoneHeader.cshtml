@model OpenWorkItemsResult

<h5 class="milestone-droppable ui-droppable" data-milestone-id="@Model.MilestoneId">
    <span href="#act-@Model.ActivityId-ms-@Model.MilestoneId" data-toggle="collapse" class="milestone" data-milestone-id="@Model.MilestoneId" aria-expanded="true">
        <i class="fas fa-flag-checkered"></i>
        <span class="editable" id="milestone-name-@Model.MilestoneId" data-url="/Update/MilestoneName">@Model.MilestoneName</span>        
        @if (Model.MilestoneId != 0)
        {
            <span class="small">@Html.FormatValue(Model.MilestoneDate, "{0:ddd M/d}")</span>
            <span class="text-muted small">
                @if (Model.MilestoneDaysAway > 0)
                {
                    <text>@Model.MilestoneDaysAway day(s) away</text>
                }
                else if (Model.MilestoneDaysAway < 0)
                {
                    <text>@Math.Abs(Model.MilestoneDaysAway.Value) day(s) ago</text>
                }
                else
                {
                    <text>today</text>
                }
            </span>
        }
    </span>
</h5>