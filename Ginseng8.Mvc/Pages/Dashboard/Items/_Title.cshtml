@model IWorkItemTitle

@if (Model.ProjectId != 0 && Model.TitleViewField == Services.WorkItemTitleViewField.Project)
{
    <span class="badge badge-info">
        @Model.DisplayProjectName
    </span>
}

@if (Model.ApplicationId != 0 && Model.TitleViewField == Services.WorkItemTitleViewField.Application)
{
    <span class="badge appButton">
        @Model.ApplicationName
    </span>
}

@{
    string editable = (Model.IsEditable(User.Identity.Name)) ? "editable" : string.Empty;
}

<span class="@editable" data-url="/Update/WorkItemTitle" id="title-@Model.Number">@Model.Title</span>