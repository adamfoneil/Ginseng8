@model IEnumerable<IGrouping<int, Label>>

<ul class="list-inline text-center">
    @foreach (var grp in Model)
    {
        var label = grp.First();
        <li class="list-inline-item">            
            <a asp-all-route-data="@(Context.Request.ToRouteData(new Dictionary<string, string>()
                { 
                    { "labelId", grp.Key.ToString() } 
                }))">
                <span class="badge" style="background-color:@label.BackColor;color:@label.ForeColor">
                @label.Name - @grp.Count()
                </span>
            </a>
        </li>
    }
</ul>