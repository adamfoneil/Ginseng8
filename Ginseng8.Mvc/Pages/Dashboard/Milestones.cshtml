@page "/Dashboard/Milestones/{id?}"
@model Ginseng.Mvc.Pages.Dashboard.MilestonesModel
@{
    ViewData["Title"] = "Milestones";
}

@if (!Model.Id.HasValue)
{
    <partial name="Items/_MilestoneCards" model="Model"/>    
}
else
{
    <partial name="Items/_MilestoneDetail" model="Model"/>    
}

@if (Model.CurrentOrgUser.CurrentAppId.HasValue)
{
    <partial name="Dashboard/Items/_CreateMilestone"/>
}

@section Scripts {
    <script src="~/js/Milestone.js"></script>
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker();
        });
    </script>
}