@page "/Dashboard/Calendar/{id?}"
@model Ginseng.Mvc.Pages.Dashboard.CalendarModel
@{
    ViewData["Title"] = "Calendar";
}

@if (!Model.Id.HasValue)
{
    <partial name="Items/_MilestoneCards" model="Model"/>    
}
else
{
    <partial name="Items/_MilestoneDetail" model="Model"/>    
}

@if (Model.CurrentOrgUser.CurrentAppId.HasValue)
{
    <partial name="Dashboard/Items/_CreateMilestone" model="@(new CreateMilestoneView() { ProjectSelect = Model.ProjectSelect })"/>
}

@section Scripts {
    <script src="~/js/Milestone.js"></script>
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker();
        });
    </script>
}